<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_marginStart">@dimen/margin_start</item>
    <item name="android:layout_marginEnd">@dimen/margin_end</item>
    <item name="android:layout_weight">1</item>
    <item name="android:backgroundTint">@color/white</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/text_size</item>
    <item name="cornerRadius">16dp</item>
    <item name="iconGravity">textStart</item>
    <item name="iconPadding">10dp</item>
    <item name="iconTint">@color/black</item>
    <item name="android:inputType">textCapWords</item>
    <item name="android:fontFamily">@font/ys_display_medium</item>
</style>
    <style name="TextStyleSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginVertical">@dimen/margin_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/margin_end_start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/grey
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="EditUnderBar" parent="android:Widget.Holo.Light.TextView">
    <item name="android:textColor">@color/black</item>
    </style>
    <style name="track_name_style_player">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MediumText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="android:background">@color/black_2</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@color/black_2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavStyle">
        <item name="android:background">@color/black_2</item>
    </style>
    <style name="CreatePlaylistEditTextStyle"  parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/input_layout_colors</item>
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="AddToPlaylistTextViewStyle">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BottomSheetSeparatorStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>