<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="24dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/image_view_playlist"
        android:layout_width="@dimen/image_view"
        android:layout_height="@dimen/image_view"
        android:layout_marginStart="13dp"
        android:layout_marginTop="@dimen/margin_recycler_element"
        android:layout_marginRight="@dimen/margin_recycler_element"
        android:layout_marginBottom="@dimen/margin_recycler_element"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_search" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView

            android:id="@+id/text_view_track_name"
            android:fontFamily="@font/ys_display_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_bottom"
            android:layout_marginEnd="16dp"
            android:text="Track Title"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_size_track"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_top_bottom"
            android:orientation="horizontal">

            <TextView
                android:textColor="?attr/color"
                android:fontFamily="@font/ys_display_regular"
                android:id="@+id/text_view_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_text_view"
                android:text="Artist Name"
                android:textSize="@dimen/text_size_track_attribute"
                android:ellipsize="end"
                android:maxLines="1" />
            <ImageView

                android:id="@+id/image_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_lens_24"
                android:layout_gravity="center"/>

            <TextView
                android:textColor="?attr/color"
                android:id="@+id/text_view_track_time"
                android:fontFamily="@font/ys_display_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_text_view"
                android:text="Track Time"
                android:layout_marginEnd="16dp"
                android:textSize="@dimen/text_size_track_attribute"
                android:ellipsize="end"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView

        android:layout_width="8dp"
        android:layout_height="14dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="1dp"
        android:scaleType="center"
        android:src="@drawable/ic_vector3" />

</LinearLayout>